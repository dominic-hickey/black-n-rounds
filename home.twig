{% extends "layout.twig" %}

{% block content %}

<div id="wrap" class="bk-pt-home">

	{{widget('responsiveslideshow', 'responsiveslideshow',
		{'duration':'5',
			'transSpeed': '1000',
			'transType': 'fade',
			'showButtons': false,
			'showBullets': true,
			'allowPause': false,
			'allowLoop': false,
			'showDescription': true,
			'showTitle': true,
			'crop': true,
			'images': [
				{'imageHeight':'auto', 'url':asset('/images/slides/slide--flag.jpg'), 'title':'From Silverstone', 'description': 'The heart of world motorsport' },
				{'imageHeight':'auto', 'url':asset('/images/slides/slide--car.jpg'), 'title':'Born From', 'description': 'A racing pedigree' },
				{'imageHeight':'auto', 'url':asset('/images/slides/slide--tree.jpg'), 'title':'One that cares', 'description': 'About our environment' },
				{'imageHeight':'auto', 'url':asset('/images/slides/slide--oxford.jpg'), 'title':'One that cares', 'description': 'About our local community' },
				{'imageHeight':'auto', 'url':asset('/images/slides/slide--tyre4.jpg'), 'title':'With years of', 'description': 'Experience and expertise' },
				{'imageHeight':'auto', 'url':asset('/images/slides/slide--tyre2.jpg'), 'title':'Comes a tyre company', 'description': 'With a difference' },
				{'imageHeight':'auto', 'url':asset('/images/slides/slide--tyre1.jpg'), 'title':'Black n Rounds', 'description': 'Tread with care' },
			]
		})|raw
	}}

	<header class="bk-header">
		<div class="flex-container  span-grid--space  flex-vac">
			<div class="flex-item">
				{{widget('logo', 'sitelogo', {"defaultlogo": asset('images/logo.png')})|raw}}
			</div>
			<div class="flex-item">
				<nav class="bk-nav">
					{{widget('extendednavigation', 'header-navigation', {"align":"left"})|raw}}
				</nav>
			</div>
		</div>
	</header>

</div>

<div role="main">
	<div class="container">
		{{zone('main')|raw}}
	</div>
</div>

{% endblock %}